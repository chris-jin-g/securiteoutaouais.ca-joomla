<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="administrator/components/com_timeworked/models/fields"
	          addrulepath="/administrator/components/com_timeworked/models/rules">
		<field name="id"
		       type="hidden"
		       default="0"
		       readonly="true"
				/>
		<!-- <field name="date"
		       type="date"
		       readonly="readonly"
		       id="add_date"
		       required="true"
		       label="JDATE"
		       description="COM_TIMEWORKED_DATE_DESC"
		       validate="date"
				/> -->
		<field name="projectid"
		       type="project"
		       label="COM_TIMEWORKED_PROJECT"
		       default="0"
		       required="true"
		       validate="project"
				/>
		<field name="task"
		       type="taskname"
		       label="COM_TIMEWORKED_NAME"
		       hint="COM_TIMEWORKED_NAME_DESC"
		       default=""
		       required="true"
		       autocomplete="off"
		       maxlength="255"
				/>
		<field name="taskid"
		       type="task"
		       label="COM_TIMEWORKED_NAME"
		       default="0"
		       required="true"
               projectid="0"
				/>
		<field name="performed_work"
		       type="textarea"
		       label="COM_TIMEWORKED_PERFORMED"
		       hint="COM_TIMEWORKED_PERFORMED_DESC"
		       default=""
		       required="true"
		       maxlength="65535"
				/>
		<field name="ticket_numbers"
		       type="placeholder"
		       label="COM_TIMEWORKED_TASKID"
		       default=""
		       required="true"
		       maxlength="45"
		       placeholder="COM_TIMEWORKED_ADD_TASK_ID"
				/>

		<field name="from"
		       type="calendar"
		       label="COM_TIMEWORKED_FROM"
		       size="45"
		       maxlength="45"
               hint="hh:mm"
               required="true"
			   format="%Y-%m-%d %H:%M"
			   showtime="true"
			   onchange="Joomla.startTimeChanged();"
				/>

		<field name="to"
		       type="calendar"
		       label="COM_TIMEWORKED_TO"
		       size="45"
		       maxlength="45"
               hint="hh:mm"
               required="true"
			   format="%Y-%m-%d %H:%M"
			   showtime="true"
			   onchange="Joomla.endTimeChanged();"
			   todaybutton="false"
				/>

		<field name="time"
		       type="text"
		       label="COM_TIMEWORKED_HOURS"
		       size="45"
		       validate="hours"
		       maxlength="8"
               hint="hh:mm"
               required="true"
               visibility="hidden"
               readonly="true"
				/>
		<field name="timeworkedid"
		       type="timeworked"
		       default="0"
		       label="COM_TIMEWORKED_TIME_WORKED_TYPE"
		       validate="timeworked"
               required="true"
				/>
		<field name="userid"
		       type="hidden"
		       required="true"
		       validate="user"
		       label="COM_TIMEWORKED_USER"
		       description="COM_TIMEWORKED_USER_DESC"
				/>
	</fieldset>
</form>
